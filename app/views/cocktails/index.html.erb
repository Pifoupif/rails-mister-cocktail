

<div class="container homepage">
  <h1>List of ALL cocktails
  </h1>
  <ul>
    <% @cocktails.each do |cocktail| %>
    <div class="card">
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
